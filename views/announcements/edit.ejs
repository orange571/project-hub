<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= annoucement.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/annoucements/<%= annoucement._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="annoucement[name]" value="<%= annoucement.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="annoucement[description]" value="<%= annoucement.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/annoucements">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

