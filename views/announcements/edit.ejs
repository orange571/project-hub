<% include ../partials/portal_header %>
      <div class="ui container main" id="content">
          <% include ../partials/error_alert %>
        <h1>Announcements - Edit <%= announcement.name %></h1>
        <section id="edit_announcement_container">
           <form class="ui form announcement" action="/announcements/<%= announcement._id %>?_method=PUT" method="POST">
                <div class="field">
                    <label for="title">Title</label>
                    <input type="text" name="announcement[title]" value="<%= announcement.title %>">
                </div>
                <div class="field">
                    <textarea name="announcement[post_body]"><%= announcement.post_body %></textarea>
                </div>
                <div class="field">
                    <button class="ui mini inverted green button">Submit!</button>
                </div>
            </form>
            <a href="/announcements/<%= announcement._id %>">Go Back</a>
        </section>
      </div>
<% include ../partials/portal_footer %>
