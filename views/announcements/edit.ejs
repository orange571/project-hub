<% include ../partials/portal_header %>
      <div class="ui container main" id="content">
        <h1>Announcements - Edit <%= announcement.name %></h1>
        <section>
           <form action="/announcements/<%= announcement._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="announcement[title]" value="<%= announcement.title %>">
                </div>
                <div class="form-group">
                    <textarea name="announcement[post_body]"><%= announcement.post_body %></textarea>
                </div>
                <div class="form-group">
                    <button class="ui mini inverted green button">Submit!</button>
                </div>
            </form>
            <a href="/announcements">Go Back</a>
        </section>
      </div>
<% include ../partials/portal_footer %>