<% include ../partials/portal_header %>
      <div class="ui container main" id="content">
          <% include ../partials/error_alert %>
        <h1>Announcements-Index</h1>
        <section>
            <div class="announcement_header">
                 <h1>Welcome To Project Hub!</h1>
                 <p>Feel Free to Add Your Announcement</p>
                 <p>
                    <a class="ui small inverted green button" href="/announcements/new">Add New Announcement</a>
                 </p>
             </div>
             <div class="post_wrapper">
                <%announcements.forEach(function(announcement){ %>
                    <div class="post">
                       <div class="post_content">
                           <h4><%= announcement.title %></h4>
                           <p class="post_body"><%= announcement.post_body %></p>
                            <div class="author-pic-name">
                                <div class="author-picture">
                                    <% if(announcement.author.picture == '') {%>
                                      <i class="user circle icon"></i>
                                    <% } else { %>
                                      <img src='<%= announcement.author.picture %>' class="profile_image"/>
                                    <% } %>
                                </div>
                                <span><em>Submitted By <%= announcement.author.username %></em></span>
                            </div>
                           
                       </div>
                       <p class="button-container">
                           <a href="/announcements/<%= announcement._id %>" class="ui mini inverted blue button">More Info</a>
                       </p>
                    </div>
                <% }); %>
            </div>
            
        </section>
      </div>
<% include ../partials/portal_footer %>