<% include ./partials/portal_header %>
      <div class="ui container main" id="content">
        <% include ./partials/error_alert %>
        <h1>Profile</h1>
        <section>
          <div class="profile_items">
            <h3>Username:</h3>
            <p class="profile_data">
                <% if(!currentUser){ %>
                    You are not signed in
                <% } else { %>
                    <%= currentUser.username %>
                <% } %>
            </p>
          </div>
          <div class="profile_items">
            <h3>Profile Picture:</h3>
            <% if(currentUser.picture == '') {%>
              <i class="user circle icon"></i> <div> Profile picture has not been set</div>
            <% } else { %>
              <img src='<%= currentUser.picture %>' class="profile_image"/>
            <% } %>
            
          </div>
          <div class="profile_items">
            <h3>Change profile picture</h3>
            <form action="/profile_url?_method=PUT" method="POST">
              <label>Enter image URL (must be from images.unsplash.com): <input type="text" name="img_url"></label>
              <input type="submit">
            </form>
            OR
            <form action="/profile_upload?_method=PUT" method="POST" enctype="multipart/form-data">
              <label>Upload local image file: <input type="file" id="image" name="image" accept="image/*" required></label>
              <input type="submit">
            </form>
          </div>
          <div class="profile_items">
            <h3>Location(s):</h3>
            <p class="profile_data">San Francisco</p>
          </div>
          <div class="profile_items">
            <h3>Default Location:</h3>
            <p class="profile_data">San Francisco</p>
          </div>
          <div class="profile_items">
            <h3>Add Location (please visit branch to recieve code)</h3>
            <form>
              <label>Enter Site Code: <input type="text" name="site_code"></label>
              <input type="submit">
            </form>
          </div>
          <div class="profile_items">
            <h3>Change Default Location</h3>
            <form>
              <label>Select Site Name:
                <select name="change_site" id="change_site">
                  <option value="san_fransisco">San Francisco</option>
                  <option value="chicago">Chicago</option>
                  <option value="new_york">New York</option>
                  <option value="seattle">Seattle</option>
                </select>
              </label>
              <input type="submit">
            </form>
          </div>
          <div>
            Note: the following only applies to the default location
          </div>
          <div class="profile_items">
            <h3>Privileges:</h3>
            <p class="profile_data">Community Member
              <% if(currentUser.isAdmin) {%>
                , &nbsp; Admin
              <% } %>
              <% if(currentUser.isLibrarian) {%>
                , &nbsp; Librarian
              <% } %>
            </p>
          </div>
          
          <div class="profile_items">
            <h3>Admin Code:</h3>
            <form action="/admin?_method=PUT" method="POST">
              <label>Enter Admin Code: <input type="text" name="adminCode"></label>
              <input type="submit">
            </form>
          </div>
          <div class="profile_items">
            <h3>Librarian Code:</h3>
            <form action="/librarian?_method=PUT" method="POST">
              <label>Enter Librarian Code: <input type="text" name="librarianCode"></label>
              <input type="submit">
            </form>
          </div>
        </section>
      </div>
<% include ./partials/portal_footer %>